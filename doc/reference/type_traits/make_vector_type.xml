<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/type_traits/make_vector_type.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::make_vector_type<Scalar, Size> -->
      <struct name="make_vector_type">
        <template>
          <template-type-parameter name="Scalar"/>
          <template-nontype-parameter name="Size">
            <type>size_t</type>
          </template-nontype-parameter>
        </template>

        <description>
          <para>
            The <code>make_vector_type</code> meta-function returns a vector
            type from a scalar type and size.
          </para>
          <para>
            Examples:
            <itemizedlist>
              <listitem><code>make_vector_type&lt;int, 2&gt;::type == int2_</code></listitem>
              <listitem><code>make_vector_type&lt;float, 4&gt;::type == float4_</code></listitem>
            </itemizedlist>
          </para>
        </description>
      </struct>
    </namespace>
  </namespace>
</header>

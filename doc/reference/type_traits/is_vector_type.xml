<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/type_traits/is_vector_type.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::is_vector_type<T> -->
      <struct name="is_vector_type">
        <template>
          <template-type-parameter name="T"/>
        </template>

        <description>
          <para>
            The <code>is_vector_type</code> meta-function returns
            <code>true</code> if <code>T</code> is a vector type.
          </para>
          <para>
            Examples:
            <itemizedlist>
              <listitem><code>is_vector_type&lt;float&gt;::value == false</code></listitem>
              <listitem><code>is_vector_type&lt;float4_&gt;::value == true</code></listitem>
            </itemizedlist>
          </para>
        </description>
      </struct>
    </namespace>
  </namespace>
</header>

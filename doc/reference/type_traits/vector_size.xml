<?xml version="1.0" encoding="utf-8"?>
<header name="boost/compute/type_traits/vector_size.hpp">
  <namespace name="boost">
    <namespace name="compute">

      <!-- boost::compute::vector_size<T> -->
      <struct name="vector_size">
        <template>
          <template-type-parameter name="T"/>
        </template>

        <description>
          <para>
            The <code>vector_size</code> meta-function returns the size (number
            of components) of the vector type <code>T</code>. For scalar types
            the function returns <code>1</code>.
          </para>
          <para>
            Examples:
            <itemizedlist>
              <listitem><code>vector_size&lt;float&gt;::value == 1</code></listitem>
              <listitem><code>vector_size&lt;float4_&gt;::value == 4</code></listitem>
            </itemizedlist>
          </para>
        </description>
      </struct>
    </namespace>
  </namespace>
</header>
